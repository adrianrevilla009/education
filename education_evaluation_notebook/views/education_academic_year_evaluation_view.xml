<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <!-- FORM AÑO ACADEMICO -->
        <record id="education_academic_year_evaluation_view_form"
        model="ir.ui.view">
        <field name="model">education.academic_year.evaluation</field>
        <field name="arch" type="xml">
            <form string="Academic year evaluation">
            <sheet>
	                <group string="Insert evaluation data">
	                    <field name="academic_year_id" />
	                    <field name="name" />
	                    <field name='school_id' />
	                    <field name='course_id' />
	                </group>
                </sheet>
            </form>
        </field>
    </record>
    <!-- SEARCH AÑO ACADEMICO -->
    <record id="education_academic_year_evaluation_view_search"
        model="ir.ui.view">
        <field name="model">education.academic_year.evaluation</field>
        <field name="arch" type="xml">
            <search>
                <field name="sequence" widget="handle" />
                <field name="academic_year_id" />
                <field name="name" />
                <field name='school_id' />
                <field name='course_id' />
                <group expand="1" string="Group By">
                    <filter name="groupby_course"
                       context="{'group_by' : 'course_id'}"
                       string="Courses" />
                    <filter name="groupby_school"
                       context="{'group_by' : 'school_id'}"
                       string="Schools" />
                </group>
            </search>
        </field>
    </record>
    <!-- TREE AÑO ACADEMICO -->
    <record id="education_academic_year_evaluation_view_tree"
        model="ir.ui.view">
        <field name="model">education.academic_year.evaluation</field>
        <field name="inherit_id"
            ref="education.education_academic_year_evaluation_view_tree" />
        <field name="arch" type="xml">
          <xpath expr="//tree" position="inside">
            <field name='school_id' />
            <field name='course_id' />
          </xpath>
        </field>
    </record>
</odoo>
