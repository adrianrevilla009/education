<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
	<record id="education_exam_check_wizard_view_form" model="ir.ui.view">
		<field name="model">education.exam.check</field>
		<field name="type">form</field>
		<field name="arch" type="xml">
			<form string="Closing the exam">
				<group>
				    <p>If you close the exam and the records are not generated, they are going to generate.
				    For doing it, this exam has to be linked to a competence in a planification.
				    Are you sure that you want to close the exam?</p>
					<field name="name" invisible="1"/>
				</group>
				<footer>
					<button name="button_save" string="Save" type="object"
						class="oe_highlight" />
					<button special="cancel" string="Cancel" class="oe_link"
						default_focus="1" />
				</footer>
			</form>
		</field>
	</record>

	<record id="education_exam_check_wizard_view_action" model="ir.actions.act_window">
		<field name="name">Exam close</field>
		<field name="res_model">education.exam.check</field>
		<field name="view_type">form</field>
		<field name="view_mode">form</field>
		<field name="target">new</field>
	</record>
</odoo>
